<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <EditText
        android:id="@+id/etNombreCiudad"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:ems="10"
        android:inputType="text"
        android:textSize="10sp"/>
    <EditText
        android:id="@+id/etCodigoPais"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/etNombreCiudad"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:ems="10"
        android:inputType="text"
        android:maxLength="2"
        android:textSize="10sp"/>

    <Button
        android:id="@+id/btnCancelarDialog"
        android:layout_width="130dp"
        android:layout_height="26dp"
        android:fontFamily="sans-serif-medium"
        android:text="CANCELAR"
        android:textSize="9sp"
        android:letterSpacing="0.2"
        app:layout_constraintEnd_toStartOf="@+id/btnAceptarDialog"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etCodigoPais"
        android:layout_marginTop="28.5dp"/>

    <Button
        android:id="@+id/btnAceptarDialog"
        android:layout_width="130dp"
        android:layout_height="26dp"
        android:fontFamily="sans-serif-medium"
        android:text="ACEPTAR"
        android:textSize="9sp"
        android:letterSpacing="0.2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btnCancelarDialog"
        app:layout_constraintTop_toBottomOf="@+id/etCodigoPais"
        android:layout_marginTop="28.5dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>